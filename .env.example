# =============================================================================
# SentinelOps - Environment Variables
# =============================================================================
# Copy this file to .env and configure your settings
# =============================================================================

# ============================================
# Application
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# MongoDB
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=sentinelops2024

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-abc123xyz
JWT_EXPIRES_IN=7d

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=redis2024

# ============================================
# Wazuh Integration
# ============================================
WAZUH_API_URL=https://your-sentinel-server:55000
WAZUH_API_USER=wazuh
WAZUH_API_PASSWORD=your-wazuh-password

# ============================================
# OCI (Oracle Cloud Infrastructure)
# ============================================
OCI_TENANCY_OCID=ocid1.tenancy.oc1..xxxxxxxxxxxxx
OCI_USER_OCID=ocid1.user.oc1..xxxxxxxxxxxxx
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
OCI_REGION=us-ashburn-1
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..xxxxxxxxxxxxx

# ============================================
# Jenkins
# ============================================
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-api-token
