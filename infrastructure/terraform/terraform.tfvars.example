# =============================================================================
# SentinelOps - Terraform Variables (Example)
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!
# =============================================================================

# AWS Configuration
aws_region   = "us-east-1"
project_name = "sentinelops"
environment  = "dev"

# IMPORTANT: Change this to your public IP for security!
# Get your IP: curl ifconfig.me
allowed_ip = "YOUR_IP_ADDRESS/32"

# Your SSH public key (cat ~/.ssh/id_rsa.pub)
public_key = "ssh-rsa AAAA... your-email@example.com"

# Instance types (adjust based on your budget)
sentinel_instance_type = "t3.large"   # SOC server - needs more resources
victim_instance_type   = "t3.medium"  # Target server
attacker_instance_type = "t3.medium"  # Kali Linux

# Versions
wazuh_version         = "4.7.0"
elasticsearch_version = "7.17.0"

# Additional tags
additional_tags = {
  Owner   = "your-name"
  Purpose = "Security Lab"
}
