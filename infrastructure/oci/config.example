# =============================================================================
# SentinelOps - OCI Configuration Example
# =============================================================================
# Copy this to ~/.oci/config and update with your values
# =============================================================================

[DEFAULT]
user=ocid1.user.oc1..your-user-ocid
fingerprint=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
tenancy=ocid1.tenancy.oc1..your-tenancy-ocid
region=us-ashburn-1
key_file=~/.oci/oci_api_key.pem

# Optional: Additional profiles for different environments
[DEV]
user=ocid1.user.oc1..your-user-ocid
fingerprint=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
tenancy=ocid1.tenancy.oc1..your-tenancy-ocid
region=us-phoenix-1
key_file=~/.oci/oci_api_key.pem

[PROD]
user=ocid1.user.oc1..your-user-ocid
fingerprint=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
tenancy=ocid1.tenancy.oc1..your-tenancy-ocid
region=us-ashburn-1
key_file=~/.oci/oci_api_key_prod.pem
