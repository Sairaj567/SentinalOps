# =============================================================================
# SentinelOps - OCI Environment Variables
# =============================================================================
# Copy this to variables.env and update with your values
# =============================================================================

# OCI Authentication
OCI_TENANCY_OCID=ocid1.tenancy.oc1..xxxxxxxxxxxxx
OCI_USER_OCID=ocid1.user.oc1..xxxxxxxxxxxxx
OCI_FINGERPRINT=xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx
OCI_REGION=us-ashburn-1
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..xxxxxxxxxxxxx

# Instance Configuration
SENTINEL_SHAPE=VM.Standard.E4.Flex
SENTINEL_OCPUS=2
SENTINEL_MEMORY_GB=16

VICTIM_SHAPE=VM.Standard.E4.Flex
VICTIM_OCPUS=1
VICTIM_MEMORY_GB=8

ATTACKER_SHAPE=VM.Standard.E4.Flex
ATTACKER_OCPUS=1
ATTACKER_MEMORY_GB=8

# Network Configuration
VCN_CIDR=10.0.0.0/16
PUBLIC_SUBNET_CIDR=10.0.1.0/24
PRIVATE_SUBNET_CIDR=10.0.2.0/24

